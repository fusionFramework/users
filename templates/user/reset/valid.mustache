<form class="form-horizontal" method="post" role="form">
	<fieldset>
		<legend>Reset your password</legend>
		<input type="hidden" name="csrf" value="{{csrf}}">
		<div class="form-group">
			<label for="input-code" class="col-lg-2 control-label">Reset token</label>
			<div class="col-lg-2">
                <input type="text" class="form-control input-sm" name="code" id="input-code" value="{{token}}" required>
            </div>
		</div>
		<div class="form-group">
			<label for="input-password" class="col-lg-2 control-label">New password</label>
			<div class="col-lg-2">
                <input type="password" class="form-control input-sm" name="password" id="input-password" required>
            </div>
		</div>
		<div class="col-lg-offset-2">
			<button type="submit" class="btn btn-warning">Reset</button>
		</div>
	</fieldset>
</form>