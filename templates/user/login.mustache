<form class="form-horizontal" method="post" role="form">
	<fieldset>
		<legend>Login</legend>
		<input type="hidden" name="csrf" value="{{csrf}}">
		<div class="form-group">
			<label for="input-username" class="col-lg-2 control-label">Username</label>
			<div class="col-lg-2">
                <input type="text" class="form-control input-sm" name="username" id="input-username" required>
            </div>
		</div>
		<div class="form-group">
			<label for="input-password" class="col-lg-2 control-label">Password</label>
			<div class="col-lg-2">
                <input type="password" class="form-control input-sm" name="password" id="input-password" required>
            </div>
		</div>
		<div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
              <div class="checkbox">
                <label>
                  <input type="checkbox" name="remember"> Remember me
                </label>
              </div>
            </div>
          </div>
		<div class="col-lg-offset-2">
			{{&throttle}}
			<button type="submit" class="btn btn-success">Login</button>
		</div>
	</fieldset>
</form>